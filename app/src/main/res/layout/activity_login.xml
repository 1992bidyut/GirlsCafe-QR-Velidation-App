<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor"
    android:id="@+id/activity_login"
    tools:context=".VIEW.PackageLogin.LoginActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="40dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/userName"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="supplier@biid.org.bd"
            android:hint="Username"
            android:gravity="center"
            android:background="@drawable/squere_shape_border_back"
            android:padding="5dp"/>
        <EditText
            android:id="@+id/password"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="$upp1ier@b11d.0rg"
            android:hint="Password"
            android:gravity="center"
            android:background="@drawable/squere_shape_border_back"
            android:padding="5dp"/>
        <TextView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/squre_shape_fill_back"
            android:layout_gravity="center"
            android:onClick="login"
            android:text="Login"/>
    </LinearLayout>



</RelativeLayout>